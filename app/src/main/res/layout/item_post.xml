<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/desc_user_profile_photo"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="300dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_image"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/profile_image"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/profile_image"
            app:layout_constraintRight_toLeftOf="@id/btn_option"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_toEndOf="@id/profile_image"
            android:fontFamily="sans-serif"
            android:textColor="@color/onBase400"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/user_name"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            tools:text="@tools:sample/cities" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/separator"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/color_blank_onbase"
            app:layout_constraintBottom_toBottomOf="@id/user_label"
            app:layout_constraintLeft_toRightOf="@id/user_label"
            app:layout_constraintTop_toTopOf="@id/user_label"
            app:riv_corner_radius="300dp" />

        <TextView
            android:id="@+id/user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/profile_image"
            android:fontFamily="sans-serif"
            android:textColor="@color/onBase400"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/separator"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            tools:text="@tools:sample/date/ddmmyy" />

        <ImageView
            android:id="@+id/btn_option"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/help_option"
            android:src="@drawable/ic_more_vert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:maxLines="3"
        android:paddingVertical="8dp"
        android:textColor="@android:color/black"
        tools:text="DIY How to Make Fabric Candy Decorations - Fake Wrapped Sw...." />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_image_1"
        app:riv_corner_radius="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/like"
            android:src="@drawable/ic_heart_angle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/onBase400" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/onBase400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_like"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100M" />

        <ImageButton
            android:id="@+id/btn_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/gallery"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_gallery_favourite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/like_count"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/onBase400" />

        <TextView
            android:id="@+id/image_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/onBase400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100M" />

        <ImageButton
            android:id="@+id/btn_step"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/step"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sledgehammer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_count"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/onBase400" />

        <TextView
            android:id="@+id/step_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/onBase400"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_step"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="100M" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
