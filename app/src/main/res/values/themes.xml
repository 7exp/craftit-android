<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CraftIt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.CraftIt" parent="Base.Theme.CraftIt">
        <item name="android:windowBackground">@color/base</item>
        <item name="android:textColor">@color/onBase</item>
    </style>

    <style name="Theme.CraftIt.ActionBar" parent="Theme.Material3.Light">
        <item name="android:windowBackground">@color/base</item>
        <item name="android:textColor">@color/onBase</item>
    </style>

    <style name="Theme.CraftIt.Button.Primary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/onPrimary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/primary100</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.CraftIt.Button.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/onBase</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primary100</item>
        <item name="strokeColor">@color/onBase</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.CraftIt.Button.Small" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/onBase</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/onBase400</item>
        <item name="textFillColor">@color/onBase400</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Theme.CraftIt.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.CraftIt</item>
    </style>
</resources>