<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">

    <ImageView
        android:id="@+id/iv_craft_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/craft_image"
        android:maxHeight="500dp"
        android:minHeight="300dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_placeholder" />

    <ScrollView
        android:id="@+id/sv_craft_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="16dp"
                android:background="@drawable/small_button_background"
                android:backgroundTint="@color/base"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:minHeight="800dp"
                android:background="@drawable/default_rounded_background"
                android:backgroundTint="@color/base"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/small_button_background" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="8dp"
                    android:textSize="24sp"
                    tools:text="Simple hand sanitizer holder using cardboard" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_user_profile_photo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/portrait_placeholder"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="42dp" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile_photo"
                        app:layout_constraintLeft_toRightOf="@id/iv_user_profile_photo"
                        app:layout_constraintTop_toTopOf="@id/iv_user_profile_photo"
                        tools:text="Craft It" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    tools:text="A super easy and cheap to make that also flies like a mighty eagle on a sunny day. Not to mention it's rather good at demonstrating some basics of aerodynamic theory: lift, gravity and drag." />

                <Button
                    android:id="@+id/source"
                    style="@style/Theme.CraftIt.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/copyright_cc_nc_sa_instructable"
                    android:textColor="@color/onBase400"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_step"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/default_rounded_background"
                        android:enabled="false"
                        android:textColor="@color/onBase"
                        app:backgroundTint="@color/base600"
                        app:icon="@drawable/ic_sledgehammer"
                        app:iconGravity="textStart"
                        app:iconTint="@color/onBase"
                        app:layout_constraintBottom_toBottomOf="@id/btn_like"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btn_like"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="3000" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/default_rounded_background"
                        android:textColor="@color/onBase"
                        app:backgroundTint="@color/base600"
                        app:icon="@drawable/ic_heart_angle"
                        app:iconGravity="textStart"
                        app:iconTint="@color/onBase"
                        app:layout_constraintLeft_toRightOf="@id/btn_step"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="3000" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>